import java.util.Scanner;

public class text{
	public static int reverse(int n){
		int s = n,c=0;
		while(n > 0){
			n /= 10;
			c++;
			}
		n = s;
		s = 0;
		while(n > 0){
			s += (n % 10) * Math.pow(10,--c);
			n /= 10;
			}
		return s;
		} 
	public static void main(String[] args){
		Scanner input = new Scanner(System.in);
		int n = input.nextInt();
		System.out.printf("该数反向为 %d ",reverse(n));	
			}
}
